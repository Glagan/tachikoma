{
	"name": "tachikoma",
	"private": true,
	"version": "0.1.0",
	"description": "Automatically sync what you read on MangaDex across many services like MyAnimeList, Anilist, Kitsu and more.",
	"scripts": {
		"dev": "npm run dev:firefox",
		"dev:firefox": "rollup -c --environment NODE_ENV:development,VENDOR:firefox --watch",
		"dev:chrome": "rollup -c --environment NODE_ENV:development,VENDOR:chrome --watch",
		"build": "npm run build:firefox && npm run build:chrome",
		"build:firefox": "rollup -c --environment NODE_ENV:production,VENDOR:firefox",
		"build:chrome": "rollup -c --environment NODE_ENV:production,VENDOR:chrome",
		"format": "prettier --write ."
	},
	"dependencies": {
		"light-icons": "^1.0.10",
		"luxon": "^2.4.0",
		"oauth-pkce": "^0.0.6",
		"webextension-polyfill": "^0.8.0"
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^4.1.3",
		"@rollup/plugin-commonjs": "^22.0.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@rollup/plugin-typescript": "^8.3.3",
		"@tsconfig/svelte": "^3.0.0",
		"@types/luxon": "^2.3.2",
		"@types/webextension-polyfill": "^0.8.3",
		"postcss": "^8.4.14",
		"postcss-preset-env": "^7.4.3",
		"rollup": "^2.75.6",
		"rollup-plugin-delete": "^2.0.0",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-progress": "^1.1.2",
		"rollup-plugin-sizes": "^1.0.4",
		"rollup-plugin-svelte": "^7.1.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript-paths": "^1.3.1",
		"rollup-plugin-typescript2": "^0.32.1",
		"svelte": "^3.48.0",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.1.1",
		"tslib": "^2.4.0",
		"typescript": "^4.7.3"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Glagan/tachikoma.git"
	},
	"keywords": [
		"manga",
		"mangadex",
		"myanimelist",
		"firefox",
		"mal",
		"chrome",
		"anilist",
		"kitsu",
		"animeplanet",
		"extension"
	],
	"author": "Glagan",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/Glagan/tachikoma/issues"
	},
	"homepage": "https://github.com/Glagan/tachikoma#readme"
}
