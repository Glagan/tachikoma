{
	"firefox:manifest_version": 2,
	"manifest_version": 3,
	"author": "Glagan",
	"description": "Automatically sync what you read on MangaDex across many services like MyAnimeList, Anilist, Kitsu and more.",
	"permissions": ["storage", "firefox:webRequest", "firefox:webRequestBlocking", "firefox:cookies"],
	"host_permissions": ["https://mochi.nikurasu.org/*"],
	"icons": {
		"24": "icons/tachikoma/24.png",
		"48": "icons/tachikoma/48.png",
		"96": "icons/tachikoma/96.png",
		"128": "icons/tachikoma/128.png"
	},
	"browser_action": {
		"browser_style": true,
		"default_title": "tachikoma",
		"default_popup": "src/Options/index.html",
		"default_icon": {
			"16": "icons/tachikoma/16.png",
			"32": "icons/tachikoma/32.png",
			"64": "icons/tachikoma/64.png",
			"128": "icons/tachikoma/128.png"
		}
	},
	"firefox:background": {
		"scripts": ["src/Background/index.ts"]
	},
	"background": {
		"service_worker": "src/Background/index.ts"
	},
	"content_scripts": [],
	"firefox:web_accessible_resources": [],
	"web_accessible_resources": [
		{
			"resources": [],
			"matches": ["<all_urls>"]
		}
	],
	"firefox:applications": {
		"gecko": {
			"id": "tachikoma@glagan",
			"strict_min_version": "78.0"
		}
	}
}
